<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,
					initial-scale=1.0" />
    <title>Academic Section</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
        integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
        integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link href="/css/styles.css" rel="stylesheet" type="text/css">

</head>
<%- include('base') %>

    <body>
        <div class=" jumbotron centered">
            <div class="container">
                <i class="fas fa-code fa-6x"></i>
                <h1 class="display-3">Academic Section</h1>
                <p class="lead">Study Till You Live</p>
                <hr>
                <% if (session.role==null ) { %>
                    <a class="btn btn-outline-info btn-lg" href="/signup" role="button">Register</a>
                    <a class="btn btn-outline-info btn-lg" href="/login" role="button">Login</a>
                    <br><br>
                    <a class="btn btn-outline-info  btn-lg" href="/about-us" role="button">About Us</a>
                    <% } %>
                        <% if (session.role=='instructor' ) { %>
                            <a class="btn btn-outline-info btn-lg" href="/addcourse" role="button">Add New Course</a>
                            <a class="btn btn-outline-info btn-lg" href="/pending" role="button">Pending Approvals</a>
                            <a class="btn btn-outline-info btn-lg" href="/releasedcourses" role="button">My Courses</a>
                            <br><br>
                            <% } %>
                                <% if (session.role=='student' ) { %>
                                    <a class="btn btn-outline-info btn-lg" href="/enrol" role="button">Enrol Courses</a>
                                    <a class="btn btn-outline-info btn-lg" href="/mycourses" role="button">My
                                        Courses</a>
                                    <!-- <a class="btn btn-outline-info btn-lg" href="/pending" role="button">Pending
                                    Approvals</a> -->
                                    <br><br>
                                    <% } %>
            </div>
        </div>

    </body>

</html>